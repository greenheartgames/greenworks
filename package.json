{
  "name": "greenworks",
  "version": "0.21.0",
  "description": "A node.js addon exposing Valve's Steamworks APIs to JavaScript",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/greenheartgames/greenworks/blob/master/LICENSE"
    }
